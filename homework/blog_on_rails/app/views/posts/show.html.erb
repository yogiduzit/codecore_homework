<div class="post-show-container">
  <div class="post-body">
    <h1 class="h1"><%= @post.title%></h1>
    <p class="p"><%= @post.body%></h1>
    <small>Posted <%= time_ago_in_words @post.created_at %> ago</small>
  </div>
  <div class="post-modify-btn">
    <%= link_to "Edit", edit_post_path(@post) %>
    <%= link_to "Delete", post_path(@post), method: :delete %>
  </div>
  <div class="comment-form">
    <h2 class="h2">Create Comment</h2>
    <%= form_with model: [@post, @comment], local: true do |form| %>
      <div class="form-group">
        <%= form.label :body %>
        <%= form.text_field :body, class: "form-control" %>
      </div>
      <%= form.submit class: "btn btn-primary" %>
    <% end %>
  </div>
  
  <% if !@comments.nil? %>
    <div class="comments-container">  
      <% @comments.each do |comment| %>
        <div class="comment-container border ">
          <p><%= comment.body %></p>
          <p><%= time_ago_in_words(comment.created_at) %></p>
          <%= link_to "Delete", post_comment_path(@post, comment), method: :delete %>
        </div>
      <% end %>
    </div>
  <% end %>

</div>