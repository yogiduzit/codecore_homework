<%-include('../partials/header')%>
<link rel="stylesheet" href="css/cohorts.css">
<%-include('../partials/navbar')%>
  <section class= "cohorts-container p-3">
    
  <% let i = 0; for (let cohort in orderedCohorts) {  %>
      <div class="cohort-container-<%=cohort %> border">
        <div class="cohort-header">
        <img src= "<%=orderedCohorts[cohort].imgURL %>" alt="Cohort Image" class="cohort-prfl-img">
        <h2 class = "cohort-heading h2"><%= cohort %> </h2>
        </div>
        <div class="cohort-body">
          <p class="members">
          <% for (let member of orderedCohorts[cohort]["members"]) { %>
            <%= member + ", " %>
            <% } %>
          </p>
        </div>
        <div class="cohort-footer">
          <button class="btn btn-primary "><a class="text-white"href="/cohorts/<%= i +=1 %>">Show Cohort</a></button>
        </div>
      </div>
  <% } %>

  </section>
<%-include('../partials/footer')%>